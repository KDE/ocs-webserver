<div id="TableContainer"></div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#TableContainer').jtable({
            jqueryuiTheme: true,
            paging: true,
            sorting: true,
            defaultSorting: 'order asc',
            title: 'Table of Sponsors',
            actions: {
                listAction: '/backend/browselisttype/list',
                createAction: '/backend/browselisttype/create',
                updateAction: function (postData) {
                    return $.Deferred(function ($dfd) {
                        $.ajax({
                            url: '/backend/browselisttype/update',
                            type: 'POST',
                            dataType: 'json',
                            data: postData,
                            success: function (data) {
                                $dfd.resolve(data);
                                $('#TableContainer').jtable('reload');
                            },
                            error: function () {
                                $dfd.reject();
                            }
                        });
                    });
                },
                deleteAction: '/backend/browselisttype/delete'
            },
            fields: {
                browse_list_type_id: {
                    key: true,
                    create: false,
                    edit: false,
                    list: true,
                    title: 'Id',
                    width: '5%',
                },
                name: {
                    title: 'Name',
                    width: '10%',
                    list: true,
                    create: true
                },
                desc: {
                    title: 'Description',
                    width: '20%',
                    list: true,
                    create: true
                },
                render_page_name: {
                    title: 'View-Page',
                    width: '20%',
                    list: true,
                    create: true
                },
                is_active: {
                    title: 'Is active',
                    width: '5%',
                    type: 'checkbox',
                    values: { '0': 'No', '1': 'Yes' },
                    defaultValue: '1',
                }
            }

            
        });

        $('#TableContainer').jtable('load');
    });
</script>
