<div id="TableContainer"></div>
<div id="dialog-form" title="Object Details"></div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#TableContainer').jtable({
            jqueryuiTheme: true,
            paging: true,
            title: 'Table of namespace',
            sorting: true, //Enable sorting
            defaultSorting: 'counter DESC', //Set default sorting
            actions: {
                listAction: '/backend/tags/list',
                createAction: '/backend/tags/create',
                updateAction: '/backend/tags/update',
                deleteAction: '/backend/tags/delete'
            },
            fields: {
                group_id: {
                    key: true,
                    create: false,
                    edit: false,
                    list: false
                },
                group_name: {
                    title: 'Namespace',
                    width: '90%'
                },
                tags: {
                    title: 'Edit Tags',
                    width: '5%',
                    sorting: false,
                    edit: false,
                    create: false,
                    display: function (jTableData) {
                        //Create an image that will be used to open child table
                        var $img = $('<a><span class="glyphicon glyphicon-tag" aria-hidden="true"></span></a>');
                        //Open child table when user clicks the image
                        $img.click(function () {
                            $('#TableContainer').jtable('openChildTable',
                                $img.closest('tr'),
                                {
                                    title: 'Tags in namespace',
                                    actions: {
                                        listAction: '/backend/tags/childlist?GroupId=' + jTableData.record.group_id,
                                        createAction: '/backend/tags/childcreate',
                                        updateAction: '/backend/tags/childupdate',
                                        deleteAction: '/backend/tags/childdelete'
                                    },
                                    fields: {
                                        tag_group_item_id: {
                                            key: true,
                                            create: false,
                                            edit: false,
                                            list: false
                                        },
                                        tag_group_id: {
                                            type: 'hidden',
                                            defaultValue: jTableData.record.group_id
                                        },
                                        tag_id: {
                                            title: 'Tag ID',
                                            create: false,
                                            edit: false,
                                        },
                                        tag_name: {
                                            title: 'Tag Name',
                                            width: '20%'
                                        }
                                        ,
                                        tag_fullname: {
                                            title: 'Tag Fullname',
                                            width: '20%'
                                        }
                                        ,
                                        tag_description: {
                                            title: 'Tag Description',
                                            width: '20%',
                                            type: 'textarea'
                                        }
                                         ,
                                        is_active: {
                                            title: 'Is active',
                                            width: '20%',
                                            type: 'checkbox',
                                            values: { '0': 'No', '1': '' },
                                            defaultValue: '1',
                                        }
                                    }
                                }, function (data) { //opened handler
                                    data.childTable.jtable('load');
                                });
                        });
                        //Return image to show on the person row
                        return $img;
                    }

                }

            }
        }).jtable('load');

        $("#dialog-form").dialog({
            autoOpen: false,
            //height: 350,
            width: 600,
            modal: true,
            buttons: {
                Close: function () {
                    $(this).dialog("close");
                }
            }
        });

    });
</script>