<div id="TableContainer"></div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#TableContainer').jtable({
            jqueryuiTheme: true,
            paging: true,
            sorting: true,
            defaultSorting: 'amount asc',
            title: 'Table of member payouts',
            actions: {
                listAction: '/backend/memberpaypaladdress/list',
                createAction: '/backend/memberpaypaladdress/create',
                updateAction: '/backend/memberpaypaladdress/update',
                deleteAction: '/backend/memberpaypaladdress/delete'
            },
            fields: {
                id: {
                    title: 'Id',
                    key: true,
                    create: false,
                    edit: false,
                    list: false
                },
                member_id: {
                    title: 'Member Id',
                    list: true,
                    edit: true,
                    create: true
                },
                paypal_address: {
                    title: 'PayPal Address',
                    list: true,
                    edit: true,
                    create: true
                },
                name: {
                    title: 'Name',
                    list: true,
                    edit: true,
                    create: true
                },
                address: {
                    title: 'Address',
                    list: true,
                    edit: true,
                    create: true
                },
                currency: {
                    title: 'Curency',
                    list: true,
                    edit: true,
                    create: true
                },
                country_code: {
                    title: 'Country Code',
                    list: true,
                    edit: true,
                    create: true
                },
                last_payment_status: {
                    title: 'Last Status',
                    options: {'': '', 'Completed': 'Completed', 'Pending': 'Pending', 'Error' : 'Error'},
                    optionsSorting: 'id',
                    list: true,
                    edit: true
                },
                last_payment_amount: {
                    title: 'Last amount',
                    list: true,
                    edit: true,
                    create: true
                },
                last_transaction_id: {
                    title: 'Last Tx-Id',
                    list: true,
                    edit: true,
                    create: true
                },
            },
            recordsLoaded: function (event, data) {
                for (var i in data.records) {
                    if (data.records[i].status == 'Completed') {
                        $('#TableContainer').find(".jtable tbody tr:eq(" + i + ")").css("cssText", "background-color:green !important; color:white !important;");
                    }
                    if (data.records[i].status == 'Pending') {
                        $('#TableContainer').find(".jtable tbody tr:eq(" + i + ")").css("cssText", "background-color:yellow !important; color:black !important;");
                    }
                    if (data.records[i].status == 'Error') {
                        $('#TableContainer').find(".jtable tbody tr:eq(" + i + ")").css("cssText", "background-color:red !important; color:white !important;");
                    }
                }
            },
            recordUpdated: function (event, data) {
                if (data.record) {
                    $('#TableContainer').jtable('load', {
                        filter_status: $('#filter_status').val(),
                        filter_member_id: $('#filter_member_id').val(),
                        filter_paypal_mail: $('#filter_paypal_mail').val()
                    });
                }
            },
            rowUpdated: function (event, data) {
                if (data.record) {
                    $('#TableContainer').jtable('load', {
                        filter_yearmonth: $('#filter_status').val(),
                        filter_member_id: $('#filter_member_id').val(),
                        filter_paypal_mail: $('#filter_paypal_mail').val()
                    });
                }
            }
        });

        //Re-load records when user click 'load records' button.
        $('#LoadRecordsButton').click(function (e) {
            e.preventDefault();
            $('#TableContainer').jtable('load', {
                filter_status: $('#filter_status').val(),
                filter_member_id: $('#filter_member_id').val(),
                filter_paypal_mail: $('#filter_paypal_mail').val()
            });
        });

        //Re-load records when user click 'remove filter' button.
        $('#RemoveFilterButton').click(function (e) {
            e.preventDefault();
            $('#TableContainer').jtable('load', {
                filter_status: null,
                filter_member_id: null,
                filter_paypal_mail: null
            });
        });

        $('#TableContainer').jtable('load');
        
        
    });
</script>