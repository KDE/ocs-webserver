                    foreach ($donations as $this->donation) {
                        echo $this->render('explore/partials/donation.phtml');
                    }
                    ?>
                </div>
            <?php } ?>


            <?php
            $topprods = $modelInfo->getMostDownloadedForHostStores(100, $this->cat_id);        
            if (count($topprods) > 0) {
                ?>
