            <?php       
            /**     
            if ($this->users) {        
                          echo $this->render('explore/partials/user.phtml');
            } **/ 
            ?>



            <?php
            $comments = $modelInfo->getLastCommentsForHostStores(5, $this->cat_id);
            if (count($comments) > 0) {
                ?>
                <span class="commentTitle" style="margin:auto;display:table;padding:5px"> Comments</span>
                <div class="prod-widget-box right" style=" background-color: #fff" id="lastcomments">
                    <?php

                    foreach ($comments as $this->comment) {
                        echo $this->render('explore/partials/comment.phtml');
                    }
                    ?>
                </div>
            <?php } ?>

            

            <?php
            $donations = $modelInfo->getLastPlingsForHostStores(5, $this->cat_id);
            if (count($donations) > 0) {
                ?>
                <span class="donationTitle" style="margin:auto;display:table;padding:5px"> Donations</span>
                <div class="prod-widget-box right" style=" background-color: #fff" id="lastdonations">
