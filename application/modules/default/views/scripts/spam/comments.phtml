<div id="dialog-confirm" title="Confirm"></div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#TableContainer').jtable({
            jqueryuiTheme: true,
            paging: true,
            sorting: true,            
            actions: {
                listAction: '/spam/commentslist',                         
               /*deleteAction: '/spam/deletecomment' */
            },
            recordsLoaded: function (event, data) {
                TooltipUser.setup("tooltipuser","right");        
            },
            fields: {
                comment_id: {
                    key: true,
                    title: 'comment id',
                    create: false,
                    edit: false,
                    list: false
                },                               
                comment_target_id: {
                    title: 'project id',
                    
                    edit: false,
                    display:function(data){                               
                            var html='<a target="_blank" href="/p/'+data.record.comment_target_id+'">'+data.record.comment_target_id+'</a>';                            
                            return html;
                        }
                },
                comment_text: {
                    title: 'text',
                    width: '30%',
                    sorting:false
                },
                comment_created_at: {
                    title: 'created',
                    width: '10%',                  
                    create: false,
                    edit: false
                },
                comment_member_id: {
                    title: 'comment by',
                    width: '10%',
                    edit: false,                    
                    display:function(data){                        
                        var html = '<a  class="tooltipuser" data-tooltip-content="#tooltip_content" data-user="'+data.record.comment_member_id+'" >';
                        html=html+'<img class="avatar" src="'+data.record.avatar+'"/>'+data.record.username+'</a>';

                        html = html+'<a class="removeuser btn btn-danger btn-xs" data-memberid="'+data.record.comment_member_id+'">Remove User </a>';
                         return html;
                    }
                },
                member_since: {                  
                    title: 'member since',
                    create: false,
                    edit: false,
                    list: true,
                    sorting:false
                },
                cntComments: {                  
                    title: '#comments',
                    create: false,
                    edit: false,
                    list: true
                },     
                cntProjects: {
                    title: '#projects',
                    width: '10%',                  
                    create: false,
                    edit: false
                },
                 aboutme: {
                    title: 'aboutme',
                    width: '10%',                  
                    create: false,
                    edit: false
                },
                reportedby:{
                    title: 'reported by',
                    width: '15%',                    
                    create: false,
                    edit: false,
                    display:function(data){   
                            var reportedby = data.record.reportedby;  
                            var html='';
                            if(reportedby)
                            {
                                var array = reportedby.split(',');      
                                $(array).each(function( index, element ) {                          
                                    html = html+'<a  class="tooltipuser" data-tooltip-content="#tooltip_content" data-user="'+element+'" >'+element+'</a><br/>';  
                                });                                  
                            }                            
                            return html;
                        }
                },
                cntreport: {
                    title: '#',
                    width: '10%',                    
                    create: false,
                    edit: false,
                    display:function(data){   
                            var cnt = data.record.cntreport;  
                            var html='';
                            if(cnt>0) html=cnt;
                            return html;
                        }
                },
                hide: {
                    title: '',
                    width: '1%',
                    sorting: false,
                    create: false,
                    edit: false,
                    list: true,
                    display: function (data) {
                        if (data.record.cntreport>0) {                            
                            return '<a role="button" class="btn btn-warning btn-xs removecomment pull-right" style="color:white;"  data-record="' + data.record.comment_id + '"><span>Remove Comment</span></a><a role="button" class="btn btn-warning btn-xs removereports pull-right" style="color:white;"  data-record="' + data.record.comment_id + '"><span>Remove Reports</span></a>'
                                ;
                        }
                    }
                }

            }
        });

        //$('#TableContainer').jtable('load');
        $('#TableContainer').jtable('load', {},function(){
              //TooltipUser.setup("tooltipuser","right");        
            });

        $("#dialog-form").dialog({
            autoOpen: false,
            //height: 350,
            width: 600,
            modal: true,
            buttons: {
                Close: function () {
                    $(this).dialog("close");
                }
            }
        });

       

        $('body').on("click", 'a.removecomment', function (event) {
            event.preventDefault();
            event.stopImmediatePropagation();

            //$("#dialog-confirm").html('are you sure to delete this comment ?').dialog('open');
            var elementRecord = $(this).data("record");

            $("#dialog-confirm").html('are you sure to delete this comment ?').dialog({
                autoOpen: true,
                html: 'are you sure to delete this comment ?',
                width: 600,
                modal: true,
                buttons: {
                     "Confirm" : function() {
                            jQuery.ajax({
                                data: {'comment_id': elementRecord},
                                url: '/spam/deletecomment',
                                type: 'post',
                                error: function () {
                                    alert("<span class='error'>Service is temporarily unavailable. Our engineers are working quickly to resolve this issue. <br/>Find out why you may have encountered this error.</span>");
                                    return false;
                                },
                                success: function (results) {
                                    $("#dialog-confirm").dialog("close");
                                    $('#TableContainer').jtable('reload');
                                    return false;
                                }
                            });         
                    },
                    "Cancel" : function() {
                      $(this).dialog("close");
                    }
                }
            });
            
            return false;
            
        });

        $('body').on("click", 'a.removeuser', function (event) {
            event.preventDefault();
            event.stopImmediatePropagation();

           
            var elementRecord = $(this).data("memberid");

            $("#dialog-confirm").html('are you sure to delete this member ?').dialog({
                autoOpen: true,
                title:'Confirm Delete Member',
                width: 600,
                modal: true,
                buttons: {
                     "Confirm" : function() {
                            jQuery.ajax({
                                data: {'member_id': elementRecord},
                                url: '/backend/user/delete',
                                type: 'post',
                                error: function () {
                                    alert("<span class='error'>Service is temporarily unavailable. Our engineers are working quickly to resolve this issue. <br/>Find out why you may have encountered this error.</span>");
                                    return false;
                                },
                                success: function (results) {
                                    $("#dialog-confirm").dialog("close");
                                    $('#TableContainer').jtable('reload');
                                    return false;
                                }
                            });         
                    },
                    "Cancel" : function() {
                      $(this).dialog("close");
                    }
                }
            });
            
            return false;
            
        });

        $('body').on("click", 'a.removereports', function (event) {
            event.preventDefault();
            event.stopImmediatePropagation();

            var elementRecord = $(this).data("record");

            $("#dialog-confirm").html('are you sure to delete this comment ?').dialog({
                autoOpen: true,
                html: 'are you sure to delete this reports ?',
                width: 600,
                modal: true,
                buttons: {
                     "Confirm" : function() {
                            jQuery.ajax({
                                data: {'comment_id': elementRecord},
                                url: '/spam/deletereports',
                                type: 'post',
                                error: function () {
                                    alert("<span class='error'>Service is temporarily unavailable. Our engineers are working quickly to resolve this issue. <br/>Find out why you may have encountered this error.</span>");
                                    return false;
                                },
                                success: function (results) {
                                    $("#dialog-confirm").dialog("close");
                                    $('#TableContainer').jtable('reload');
                                    return false;
                                }
                            });     
                    },
                    "Cancel" : function() {
                      $(this).dialog("close");
                    }
                }
            });

            

            return false;
        });

    });
</script>