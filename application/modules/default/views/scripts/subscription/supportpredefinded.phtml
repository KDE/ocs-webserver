            if($sumNum>0) { 
            
                $monthNum = calForMonth($sumNum);
                $yearNum = calForYear($sumNum);

                $('#desc_1').text("(Pay $" + $monthNum + " per Month, "+calFees($sumNum)+" or Pay $" + $yearNum + " per Year, "+calFees($sumNum*12)+")");


