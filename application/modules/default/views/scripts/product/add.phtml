                          if (form_select_option == this.cat_id_path[level]) {
                              attr_selected = ' selected="selected"'
                          }
                          new_html_element += '<option value="' + form_select_option + '" ' + attr_selected + '>' + this.cat_id_data[form_elem_name][form_select_option] + '</option>';
