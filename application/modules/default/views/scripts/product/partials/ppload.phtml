                     function generateOcsUrl(url, type, filename) {
                         if (!url || !type) {
                             return '';
                         }
                         if (!filename) {
                             filename = url.split('/').pop().split('?').shift();
                         }
                         return 'ocs://install'
                            + '?url=' + encodeURIComponent(url)
                            + '&type=' + encodeURIComponent(type)
                            + '&filename=' + encodeURIComponent(filename);
                     }


