                                }
                                var title = '';
                                if (this.title) {
                                    title = this.title;
                                }
                                var text = '';
                                if (this.text) {
                                    text = this.text;
                                }
                                var date = '';
                                if (this.created_at) {
                                    date = this.created_at;
                                }


                                var divEl = $('<div />');
                                divEl.attr('data-uptdate-id', id);
                                divEl.append(
                                         '<a name="anker_'+id+'"></a>'
                                        + '<h4>'+title+'</h4>'
                                        + '<div class="small light lightgrey product-update-date">'+date+ '</div>'
