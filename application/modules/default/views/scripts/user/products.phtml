                                btnEdit.attr('data-change-update-btn',id);
                                btnEdit.attr('data-change-title',title);
                                btnEdit.attr('data-change-text',text);


                                var btnDelete = $('<button type="submit" class="btn btn-native btn-sm">Delete</button>');
