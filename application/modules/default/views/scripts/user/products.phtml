                dataType: 'json',
                success: function (data, textStatus, jqXHR) {
                    if (data.status != 'success') {
                        return;
                    }
                    $modalPpload.find('#update-title').val('');
                    $modalPpload.find('#update-text').val('');
                    $modalPpload.find('#update-id').val('');

                    if(update_id) {
                        getUpdates();
                    } else {
